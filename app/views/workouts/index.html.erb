<%= render 'layouts/nav' %>

<p id="notice"><%= notice %></p>

<h1>Workouts</h1>

<table>
  <thead>
    <tr>
      <th>Workout Name</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workouts.each do |workout| %>
      <tr>
        <td><%= workout.name %></td>
        <td><%= workout.user.username %></td>
        <td><%= link_to 'Favorite', 'users/' + current_user.id.to_s + '/favorite_workout', method: :post%></td>
        <%if workout.user.username == current_user.username%>
          <td><%= link_to 'Edit', edit_workout_path(workout) %></td>
          <td><%= link_to 'Destroy', workout, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Workout', new_workout_path %>

<%= link_to 'Back', root_path %>

