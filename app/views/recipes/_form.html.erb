<%= form_with(model: recipe, local: true) do |form| %>
  <% if recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
      <% recipe.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :recipe_name %>
  </div>

  <div class="field">
    <%= form.label :instructions %>
    <%= form.text_field :instructions, id: :recipe_instructions %>
  </div>

  <div class="field">
    <%= form.label :Other_users_may_comment_on_this_recipe! %>
    <%= form.check_box :comments_state, id: :recipe_comments_state %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
